{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "outDir": "lib",
    "module": "commonjs",
    "target": "esnext",
    "pretty": true,
    "sourceMap": false,
    "inlineSourceMap": false,
    "inlineSources": false,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "lib": [
      "es7"
    ]
  },
  "exclude": [
    "node_modules",
    "./src/**/*.spec.ts"
  ]
}